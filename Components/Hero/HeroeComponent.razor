@inject IStringLocalizer<Resources.HeroeComponent> localizer
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
<section id="hero" class="d-flex align-items-center">
    <div class="container" data-aos="zoom-out" data-aos-delay="100">
        <h1> @((MarkupString)localizer["heroewelcome"].ToString())</h1>
        <h2>@localizer["heroeadvice"]</h2>
        <div class="d-flex">
            <a href="javascript:function() { return false; }" @onclick="GoToContactUs"
                class="btn-get-started scrollto">@localizer["heroebutton"]</a>
            @* <a href="javascript:function() { return false; }" class="glightbox btn-watch-video"><i
                    class="bi bi-play-circle"></i><span>@localizer["heroevideo"]</span></a> *@
            <a href="https://youtu.be/0En36L0KnS8 '_blank'" class="glightbox btn-watch-video"><i
                    class="bi bi-play-circle"></i><span>@localizer["heroevideo"]</span></a>
        </div>
    </div>
</section>
@code {
    private async Task GoToContactUs()
    {
        NavigationManager.NavigateTo("/Contactus");
        await Task.Delay(100);
        await JSRuntime.InvokeVoidAsync("BlazorScrollToId", "contact-form");
    }
}